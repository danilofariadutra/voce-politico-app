<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/sc_splash_screen_03"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_title_splash_screen_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="VocÃª tem ideia do peso da sua escolha?"
        android:textAlignment="center"
        android:textColor="#1A1D1E"
        android:textSize="26dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/divider_splash_screen_03"
        android:layout_width="407dp"
        android:layout_height="2dp"
        android:background="@color/gray_1"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_splash_screen_03"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/img_splash_screen_03"
        android:layout_width="298dp"
        android:layout_height="295dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_splash_screen_03"
        app:srcCompat="@drawable/ic_vote" />

    <ImageButton
        android:id="@+id/btn_right_splash_screen_03"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_button_right"
        android:onClick="splash_screen_03_to_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_splash_screen_03" />

</androidx.constraintlayout.widget.ConstraintLayout>